<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" 
    android:id="@+id/chatfragment">
    
        <ScrollView
	    	android:layout_width="fill_parent"
	    	android:layout_height="match_parent"
	    	android:scrollbarStyle="outsideOverlay">
			
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            
			<!-- Title -->
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="90dp"
	            android:layout_marginTop="0dp" >
				
	            <ImageView
      		    	android:id="@+id/scan"
            		android:layout_width="70dp"
        			android:layout_height="70dp"
        			android:layout_alignParentBottom="true"
        			android:layout_alignParentLeft="true"        			
        			android:layout_marginLeft="10dp"
        			android:layout_marginBottom="10dp"
        			android:src="@drawable/mm_title_btn_qrcode_normal"
        			/> 
	        			
	            <TextView
                	android:id="@+id/tasktitle"
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:gravity="center_vertical"
        			android:layout_toRightOf="@id/scan"
        			android:paddingLeft="5dp"
        			android:paddingTop="5dp"
        			android:paddingRight="5dp" 
        			android:hint="Please click task or scan device bar code to start"
        			android:textSize="15sp"		
					android:textColor="#000" />
	            <TextView
	      			android:id="@+id/taskstatus"
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_below="@id/tasktitle"
        			android:layout_toRightOf="@id/scan"
        			android:text="Status: "
        			android:paddingLeft="5dp"
        			android:textSize="17sp"		
					android:textColor="#333" /> 
				<TextView
	      			android:id="@+id/taskstatus1"
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_below="@id/tasktitle"
        			android:layout_toRightOf="@id/taskstatus"
        			android:paddingLeft="5dp" 
        			android:textSize="17sp"
        			/> 
						
	        </RelativeLayout>

      
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:id="@+id/customer_name" >
         		
      		  	<TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:padding="5dp" 
        			android:text="Customer Name:"
        			android:textSize="15sp"		
					android:textColor="#333" /> 
				<EditText
     				android:id="@+id/inputcustomername"
        			android:layout_width="match_parent" 
        			android:layout_height="wrap_content"
        			android:layout_marginLeft="80dp"
        			android:padding="5dp" 
        			android:hint=""
        			android:singleLine="true"
        			android:textSize="17sp"		
					android:textColor="#000" /> 					
   		  	</LinearLayout>
   		  	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:id="@+id/customer_number" >
         		
      		  	<TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:padding="5dp" 
        			android:text="Customer No.:"
        			android:textSize="15sp"		
					android:textColor="#333" /> 
				<EditText
     				android:id="@+id/inputcustomernumber"
        			android:layout_width="match_parent" 
        			android:layout_height="wrap_content"
        			android:layout_marginLeft="80dp"
        			android:padding="5dp" 
        			android:hint=""
        			android:singleLine="true"
        			android:textSize="17sp"		
					android:textColor="#000" /> 					
   		  	</LinearLayout>
   		  	
   		  	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:id="@+id/address" >
         		
      		  	<TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:padding="5dp" 
        			android:text="Address:"
        			android:textSize="15sp"		
					android:textColor="#333" /> 
				<EditText
     				android:id="@+id/inputaddress"
        			android:layout_width="match_parent" 
        			android:layout_height="wrap_content"
        			android:layout_marginLeft="80dp"
        			android:padding="5dp" 
        			android:hint=""
        			android:textSize="17sp"		
					android:textColor="#000" /> 					
   		  	</LinearLayout>
   		  	
   		  	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:id="@+id/removedevice" >
				
         		<LinearLayout
         		    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal" >
	      		  	<TextView
	        			android:layout_width="wrap_content" 
	        			android:layout_height="wrap_content"
	        			android:padding="5dp" 
	        			android:text="Remove Device No:"
	        			android:textSize="15sp"		
						android:textColor="#333" /> 
					<ImageView
	      		    	android:id="@+id/scanremove"
	            		android:layout_width="wrap_content"
	        			android:layout_height="wrap_content"
	        			android:layout_marginLeft="10dp"
	        			android:layout_marginBottom="10dp"
	        			android:src="@drawable/mm_title_btn_qrcode_normal"
	        			/>
					
					<TextView
					    android:id="@+id/isremoveright"
	        			android:layout_width="wrap_content" 
	        			android:layout_height="wrap_content"
	        			android:padding="0dp" 
	        			android:text=""
	        			android:textSize="15sp"		
						android:textColor="#333" /> 
				</LinearLayout>
				<TextView
     				android:id="@+id/removedevicenumber"
        			android:layout_width="match_parent" 
        			android:layout_height="wrap_content"
        			android:layout_marginLeft="80dp"
        			android:padding="5dp" 
        			android:hint=""
        			android:textSize="17sp"		
					android:textColor="#000" /> 					
   		  	</LinearLayout>
   		  	
   		  	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:id="@+id/installdevice" >
				
         		<LinearLayout
         		    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal" >
	      		  	<TextView
	        			android:layout_width="wrap_content" 
	        			android:layout_height="wrap_content"
	        			android:padding="5dp" 
	        			android:text="Install Device No:"
	        			android:textSize="15sp"		
						android:textColor="#333" /> 
					<ImageView
	      		    	android:id="@+id/scaninstall"
	            		android:layout_width="wrap_content"
	        			android:layout_height="wrap_content"
	        			android:layout_marginLeft="10dp"
	        			android:layout_marginBottom="10dp"
	        			android:src="@drawable/mm_title_btn_qrcode_normal"
	        			/>
					<TextView
					    android:id="@+id/isinstallright"
	        			android:layout_width="wrap_content" 
	        			android:layout_height="wrap_content"
	        			android:padding="0dp" 
	        			android:text=""
	        			android:textSize="15sp"		
						android:textColor="#333" /> 
				</LinearLayout>
				<TextView
     				android:id="@+id/installdevicenumber"
        			android:layout_width="match_parent" 
        			android:layout_height="wrap_content"
        			android:layout_marginLeft="80dp"
        			android:padding="5dp" 
        			android:hint=""
        			android:textSize="17sp"		
					android:textColor="#000" /> 					
   		  	</LinearLayout>
   		  	
   		  	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:id="@+id/transformer" >
         		
      		  	<TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:padding="5dp" 
        			android:text="Transformer Name:"
        			android:textSize="15sp"		
					android:textColor="#333" /> 
				<EditText
     				android:id="@+id/inputtransformaname"
        			android:layout_width="match_parent" 
        			android:layout_height="wrap_content"
        			android:layout_marginLeft="80dp"
        			android:padding="5dp" 
        			android:hint=""
        			android:singleLine="true"
        			android:textSize="17sp"		
					android:textColor="#000" /> 					
   		  	</LinearLayout>
   		  	
   		  	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:id="@+id/uplink_concentrator" >
         		
      		  	<TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:padding="5dp" 
        			android:text="Uplink Concentrator:"
        			android:textSize="15sp"		
					android:textColor="#333" /> 
				<EditText
     				android:id="@+id/inputconcentratornumber"
        			android:layout_width="match_parent" 
        			android:layout_height="wrap_content"
        			android:layout_marginLeft="80dp"
        			android:padding="5dp" 
        			android:hint="input if exists"
        			android:singleLine="true"
        			android:textSize="17sp"		
					android:textColor="#000" /> 					
   		  	</LinearLayout>
   		  	
   		  	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:clickable="true"
			    android:id="@+id/location" >
				
         		<RelativeLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
	      		  	<TextView
	      		  	    android:id="@+id/gpstitle"
	        			android:layout_width="wrap_content" 
	        			android:layout_height="wrap_content"
	        			android:padding="5dp" 
	        			android:text="GPS Location:"
	        			android:textSize="15sp"		
						android:textColor="#333" /> 
					<TextView
					    android:id="@+id/gpsstatus"
					    android:layout_toRightOf="@id/gpstitle"
					    android:layout_centerVertical="true"
	        			android:layout_width="wrap_content" 
	        			android:layout_height="wrap_content"
	        			android:padding="5dp" 
	        			android:hint="Click here to locate"
	        			android:textSize="10sp"		
						android:textColor="#ccc" />
	      		</RelativeLayout>
				<RelativeLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:clickable="true"
				    android:layout_marginLeft="30dp">
				    <TextView 
				        android:layout_width="60dp"
				        android:layout_height="wrap_content"
				        android:text="Lat:"
				        android:textSize="17sp"
				        android:textColor="#222"/>
				    
					<TextView
	     				android:id="@+id/latitude"
	        			android:layout_width="match_parent" 
	        			android:layout_height="wrap_content"
	        			android:layout_centerVertical="true"
	        			android:layout_alignParentLeft="true"
	        			android:layout_marginLeft="80dp"
	        			android:clickable="true"
	        			android:padding="5dp"
	        			android:singleLine="true"
	        			android:textSize="17sp"		
						android:textColor="#000" /> 
				</RelativeLayout>
				
				<RelativeLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="30dp">
				    <TextView 
				        android:layout_width="60dp"
				        android:layout_height="wrap_content"
				        android:text="Long:"
				        android:textSize="17sp"
				        android:textColor="#222"/>
					<TextView
	     				android:id="@+id/longitude"
	        			android:layout_width="match_parent" 
	        			android:layout_height="wrap_content"
	        			android:layout_centerVertical="true"
	        			android:layout_alignParentLeft="true"
	        			android:layout_marginLeft="80dp"
	        			android:clickable="true"
	        			android:padding="5dp"
	        			android:singleLine="true"
	        			android:textSize="17sp"		
						android:textColor="#000" /> 
				</RelativeLayout>
   		  	</LinearLayout>
   		  	
   		  	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:id="@+id/old_prepaid_balance" >
         		
      		  	<TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:padding="5dp" 
        			android:text="Old meter prepaid balance"
        			android:textSize="15sp"		
					android:textColor="#333" /> 
				<EditText
     				android:id="@+id/inputoldbalance"
        			android:layout_width="match_parent" 
        			android:layout_height="wrap_content"
        			android:layout_marginLeft="80dp"
        			android:padding="5dp" 
        			android:hint=""
        			android:inputType="numberDecimal"
        			android:singleLine="true"
        			android:textSize="17sp"		
					android:textColor="#000" /> 					
   		  	</LinearLayout>
   		  	
   		  	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:id="@+id/old_meter_energy" >
         		
      		  	<TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:padding="5dp" 
        			android:text="Old meter last reading:"
        			android:textSize="15sp"		
					android:textColor="#333" /> 
				<EditText
     				android:id="@+id/inputoldenergy"
        			android:layout_width="match_parent" 
        			android:layout_height="wrap_content"
        			android:layout_marginLeft="80dp"
        			android:padding="5dp" 
        			android:hint=""
        			android:inputType="numberDecimal"
        			android:singleLine="true"
        			android:textSize="17sp"		
					android:textColor="#000" /> 					
   		  	</LinearLayout>
   		  	
   		  	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:id="@+id/new_meter_energy" >
         		
      		  	<TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:padding="5dp" 
        			android:text="New meter start reading:"
        			android:textSize="15sp"		
					android:textColor="#333" /> 
				<EditText
     				android:id="@+id/inputnewenergy"
        			android:layout_width="match_parent" 
        			android:layout_height="wrap_content"
        			android:layout_marginLeft="80dp"
        			android:padding="5dp" 
        			android:hint=""
        			android:inputType="numberDecimal"
        			android:singleLine="true"
        			android:textSize="17sp"		
					android:textColor="#000" /> 					
   		  	</LinearLayout>
   		  	
   		  	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:id="@+id/remark" >
         		
      		  	<TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:padding="5dp" 
        			android:text="Remark:"
        			android:textSize="15sp"		
					android:textColor="#333" /> 
				<TextView
     				android:id="@+id/inputremark"
        			android:layout_width="match_parent" 
        			android:layout_height="wrap_content"
        			android:layout_marginLeft="80dp"
        			android:padding="5dp" 
        			android:hint=""
        			android:singleLine="true"
        			android:textSize="17sp"		
					android:textColor="#000" /> 					
   		  	</LinearLayout>
   		  	
      		<LinearLayout
            		android:layout_width="fill_parent"
            		android:id="@+id/linear_sign"
            		android:layout_height="wrap_content"
            		android:gravity="center_vertical"
            		android:clickable="true"
            		android:orientation="vertical"
            		 >
				<TextView
			        android:id="@+id/tv_sign"
			        android:padding="8dp" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="top|left"
			        android:gravity="center"
			        android:textSize="15sp"		
					android:textColor="#000"
			        android:text="Signature:"
			        />	
            	<ImageView 
			         android:id="@+id/iv_sign"
			         android:layout_marginTop="0dp"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content" 
			         android:layout_gravity="center"
			         android:src="@drawable/signuphere"
			         />
			</LinearLayout>	 	
			     		
      		
     
            		
	      	<GridView 
			        android:id="@+id/gridview" 
			        android:layout_width="fill_parent" 
			        android:layout_height="wrap_content" 
			        android:numColumns="4" 
			        android:verticalSpacing="1dp" 
			        android:horizontalSpacing="1dp" 
			        android:stretchMode="columnWidth" 
			        android:gravity="center" 
			        
			        />   
			<LinearLayout
            		android:layout_width="match_parent"
            		android:id="@+id/button"
            		android:layout_height="wrap_content"
            		android:gravity="center_vertical"
            		android:clickable="true"
            		android:orientation="horizontal"
            		 >
            	<Button 
            	    android:id="@+id/failed_btn"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="1"
			        android:padding="5dp"
			        android:text="Failed"
			        android:background="@drawable/btn_style_red"
			        android:textColor="#ffffff"
			        android:textSize="18sp"/>
            	<Button 
            	    android:id="@+id/succeed_btn"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="1"
			        android:padding="5dp"
			        android:text="Succeed"
			        android:background="@drawable/btn_style_green"
			        android:textColor="#ffffff"
			        android:textSize="18sp"/>
      		</LinearLayout>	 
        
        
        
	</LinearLayout>
  </ScrollView>

</LinearLayout>

